{
    "extends": "eslint:recommended",
    "parserOptions": {
       "ecmaVersion": 8,
       "ecmaFeatures": {
          "jsx": true
       },
       "sourceType": "module"
    },
    "globals": {
        "chrome": false
    },
    "env": {
       "browser": true,
       "commonjs": true,
       "mocha": true
    },
    "rules": {
       "no-console": 0,
       "no-unused-vars": 0,
       "react/jsx-uses-vars": 1
    },
    "plugins": [
       "react"
    ]
}